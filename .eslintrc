{
    "env": {
      "es6": true,
      "node": true,
      "mocha": true
    },
    "extends": [
      "standard",
      "eslint:recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "rules": {
      "indent": "off",
      "space-before-function-paren": "off",
      "no-useless-escape": "off"
    }
  }